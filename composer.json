{
    "name"       : "nano7/nano7",
    "description": "The Nano Framework.",
    "keywords"   : ["framework", "nano", "php"],
    "license"    : "GPL-3",
    "type"       : "project",

    "authors": [
        {
            "name" : "Bruno Goncalves",
            "email": "bugotech@gmali.com"
        }
    ],

    "require": {
        "php"                   : ">=5.5.0",
        "illuminate/config"     : "5.4.*",
        "illuminate/container"  : "5.4.*",
        "illuminate/filesystem" : "5.4.*",
        "illuminate/support"    : "5.4.*",
        "illuminate/translation": "5.4.*",
        "vlucas/phpdotenv"      : "^2.4",
        "mongodb/mongodb"       : "^1.0.0",
        "illuminate/http"       : "5.4.*",
        "nikic/fast-route"      : "1.3.*",
        "symfony/console"       : "^3.4"
    },

    "autoload": {
        "files": [
            "src/Foundation/helpers.php",
            "src/Database/helpers.php",
            "src/View/helpers.php",
            "src/Http/helpers.php",
            "src/Console/helpers.php",
            "src/Auth/helpers.php"
        ],

        "psr-4": {
            "App\\"  : "app/",
            "Nano7\\": "src/"
        }
    },

    "scripts": {
        "post-autoload-dump"       : [
            "@php cmd package:discover"
        ]
    },

    "config": {
        "preferred-install"  : "dist",
        "sort-packages"      : true,
        "optimize-autoloader": true
    },

    "minimum-stability": "dev",
    "prefer-stable"    : true
}
